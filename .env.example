# Telegram Bot Configuration
TG_BOT_TOKEN=your_telegram_bot_token_here
TG_BOT_NAME=CTBFashion
TG_BOT_USERNAME=CTBFashionBot
TG_BOT_LINK=https://t.me/CTBFashionBot
TG_BOT_OWNER_ID=0

# Access Control (comma-separated user IDs)
ADMIN_IDS=123456789
USER_IDS=111111111,222222222,333333333

# Database Configuration
DATABASE_URL=postgres://user:password@host:port/database
# DATABASE_URL=mysql://user:password@host/database  # MySQL 5.7+
# DATABASE_URL=sqlite:///storage/data/database.db  # SQLite (local)

# Database Table/Column Restrictions (comma-separated, optional)
DATABASE_ALLOWED_TABLES=
DATABASE_RESTRICTED_TABLES=
DATABASE_EXCLUDED_COLUMNS=password_hash,secret_key

# OpenRouter LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openrouter/aurora-alpha

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
CURRENCY_SYMBOL=$
SMALLTALK_ENABLED=true
PROFANITY_FILTER_ENABLED=true
LLM_MAX_RETRIES=3
RESPONSE_MAX_WORDS=30
